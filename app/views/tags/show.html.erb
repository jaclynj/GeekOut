<div class = "event">
  <h3>Outings tagged with "<%= @tag.name %>"</h3>
  <% @tag.current_places.each do |place| %>
   <a href = "/places/<%=place.id%>"><%=place.name%></a>
  <br> <%=place.location%><br>
   <%=  place.pretty_time %> <br>
  <% end %>
  <br>
  <div class = "admin">
    <%=link_to 'Delete this tag', @tag, :method => :delete %>
  </div>
</div>

