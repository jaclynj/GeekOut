<div class = "event">
  <%p = @outing%>
  <h4><%= p.name %></h4><br>
  <% if p.date != nil && p.date != "" %>
    Start date: <%= p.pretty_time %>
  <%end%>

  <% if p.end_date != nil && p.end_date != "" %>
    End date: <%= p.pretty_date %><br>
  <%else%>
  <%end%>

  <% if p.start_time != nil && p.start_time != "" %>
    Start time: <%= p.start_time %> <br>
  <%else%>
  <%end%>

  <% if p.end_time != nil && p.end_time != "" %>
    End time: <%= p.end_time %> <br>
  <%else%>
  <%end%>

  <% if p.sponsor != nil && p.venue_address != "" %>
    Hosted/Sponsored by: <%= p.sponsor %> <br>
  <%else%>
  <%end%>

  <% if p.venue_address != nil && p.venue_address != "" %>
    Address: <%= p.venue_address %> <br><br>
  <%else%>
  <%end%>

  <% if p.description != nil %>
    <%= p.description %><br>
  <%else%>
  <%end%>
  <% if p.tags.empty? == false %>
  <h4>Tags:</h4><br>
  <% p.tags.each do |t| %>
    <a href = "/tags/<%=t.id%>"><%= t.name %></a> |
  <% end %><br><br>
  <%else%>
  <%end%>

  <% if p.link != nil && p.link != "" %>
    <a href ="<%= p.link %>">More Info</a><br>
  <%else%>
  <%end%>

  <br>
  <%if current_user%>
  <div class = "admin">
    <%=link_to 'Edit this outing', "/outings/#{p.id}/edit" %>
    <%= link_to 'Delete this outing', @outing, :method => :delete %>
  </div>
  <%end%>
</div>

