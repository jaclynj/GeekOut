<h1> Sign Up</h1>

<% if @user.errors.any? %>
<ul>
  <% @user.errors.messages.each do |error, msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%=f.label :email%>
  <%=f.text_field :email %>
    <%=f.label :password%>
  <%=f.password_field :password %>
    <%=f.label :password_confirmation%>
  <%=f.password_field :password_confirmation %>
  <%=f.submit "Sign Up" %>
  <% end %>
